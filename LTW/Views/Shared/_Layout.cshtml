@using LTW.Models
@{
    var title = ViewBag.Title ?? "Linh kiện điện tử 4M";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@title - 4M</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <header class="bg-white shadow-sm">
        <div class="container py-2">
            <div class="row align-items-center g-2">
                <!-- Logo -->
                <div class="col-md-3 d-flex align-items-center mb-2 mb-md-0">
                    <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center text-decoration-none">
                        <div class="logo-mark-4m me-2">
                            <span>4M</span>
                        </div>
                        <div class="d-flex flex-column">
                            <span class="fw-bold text-uppercase text-4m-primary">Linh kiện điện tử 4M</span>
                            <small class="text-muted">Linh kiện - Module - Phụ kiện</small>
                        </div>
                    </a>
                </div>

                <!-- Search -->

                <div class="col-md-5 mb-2 mb-md-0">
                    @using (Html.BeginForm("TimKiemTheoTuKhoa", "Home", FormMethod.Post))
                    {
                        <form class="d-flex" method="get" action="@Url.Action("Index","Home")">
                            <div class="input-group">
                                <input type="text"
                                       name="keyword"
                                       class="form-control"
                                       placeholder="Tìm sản phẩm, module, linh kiện..." />

                                <button type="submit" class="btn btn-4m-primary px-3">
                                    🔍 Tìm kiếm
                                </button>
                            </div>
                        </form>
                    }
                </div>

                <!-- Cart + Đăng nhập -->
                <div class="col-md-4 d-flex justify-content-md-end justify-content-start align-items-center gap-3">

                    @* GIỎ HÀNG 4M *@
                    <a href="@Url.Action("Index","Cart")"
                       class="cart-button-4m position-relative d-flex align-items-center justify-content-center me-1">
                        <i class="bi bi-bag-heart-fill cart-icon-4m"></i>
                        @{
                            int cartCount = 0;

                            if (Session["User"] != null)
                            {
                                var u = (Users)Session["User"];
                                using (var db = new LinhKienDienTuEntities_())
                                {
                                    var cart = db.Cart.FirstOrDefault(c => c.UserID == u.UserID);
                                    if (cart != null)
                                    {
                                        cartCount = db.CartItems
                                                      .Where(ci => ci.CartID == cart.CartID)
                                                      .Sum(ci => (int?)ci.Quantity) ?? 0;
                                    }
                                }
                            }
                        }
                        <span class="cart-badge-4m position-absolute">@cartCount</span>
                    </a>

                    @* KHU VỰC ĐĂNG NHẬP/ĐĂNG KÝ *@
                    <div class="d-flex flex-column text-end small">
                        @if (Session["User"] != null)
                        {
                            // Đã đăng nhập -> Lấy thông tin user từ Session
                            var user = (Users)Session["User"];

                            <span class="fw-bold">Xin chào, @user.FullName</span>
                            <div>
                                <a href="@Url.Action("Profile", "Account")" class="text-decoration-none me-2">Tài khoản</a>
                                <span class="text-muted">/</span>
                                <a href="@Url.Action("Logout", "Account")" class="text-decoration-none ms-2 text-danger">Đăng xuất</a>
                            </div>
                        }
                        else
                        {
                            // Chưa đăng nhập
                            <div>
                                <a href="@Url.Action("Login","Account")" class="text-decoration-none me-2">Đăng nhập</a>
                                <span class="text-muted">/</span>
                                <a href="@Url.Action("Login","Account")" class="text-decoration-none ms-2">Đăng ký</a>
                                @* Mình trỏ cả 2 link về Login vì trang Login của bạn đã có cả Tab Đăng ký *@
                            </div>
                            <span class="text-muted d-none d-md-inline">Xin chào, khách truy cập!</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- MAIN NAV -->
    <nav class="bg-white border-top border-bottom">
        <div class="container py-2">
            @Html.Partial("_NavbarCategories")
        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <main class="py-3">
        <div class="container">
            <div class="row g-3">
                <!-- SIDEBAR -->
                <div class="col-lg-3">
                    @Html.Partial("_Sidebar4M")
                </div>

                <!-- CONTENT -->
                <div class="col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer-4m bg-dark text-light pt-4 mt-4">
        <div class="container">

            <div class="row">

                <!-- Cột 1: Giới thiệu -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase fw-bold">Linh Kiện Điện Tử 4M</h6>
                    <p class="small text-light">
                        Cung cấp linh kiện điện tử, module cảm biến, kit Arduino – ESP, phụ kiện kỹ thuật chất lượng cao.
                    </p>
                    <p class="small mb-1"><i class="bi bi-geo-alt"></i> 140 Lê Trọng Tấn - Tân Phú</p>
                    <p class="small mb-1"><i class="bi bi-envelope"></i> contact@4m.vn</p>
                    <p class="small"><i class="bi bi-telephone"></i> 0900 000 000</p>
                </div>

                <!-- Cột 2: Chính sách -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase fw-bold">THÔNG TIN THÊM</h6>
                    <ul class="list-unstyled small">
                        <li><a href="@Url.Action("Contact","Home")" class="text-light text-decoration-none">Liên hệ</a></li>
                        <li><a href="@Url.Action("About","Home")" class="text-light text-decoration-none">Giới thiệu</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Mạng xã hội -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase fw-bold">Kết nối với chúng tôi</h6>
                    <div class="d-flex gap-3 fs-4">
                        <a href="#" class="text-light"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-youtube"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>

            </div>

            <hr class="border-secondary" />

            <div class="text-center small py-2">
                © @DateTime.Now.Year Linh Kiện Điện Tử 4M.
                Tất cả quyền được bảo lưu.
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>