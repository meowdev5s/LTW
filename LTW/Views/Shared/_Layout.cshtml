@using LTW.Models
@{
    var title = ViewBag.Title ?? "Linh kiện điện tử 4M";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@title - 4M</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <header class="bg-white shadow-sm">
        <div class="container py-2">
            <div class="row align-items-center g-2">
                <!-- Logo -->
                <div class="col-md-3 d-flex align-items-center mb-2 mb-md-0">
                    <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center text-decoration-none">
                        <div class="logo-mark-4m me-2">
                            <span>4M</span>
                        </div>
                        <div class="d-flex flex-column">
                            <span class="fw-bold text-uppercase text-4m-primary">Linh kiện điện tử 4M</span>
                            <small class="text-muted">Linh kiện - Module - Phụ kiện</small>
                        </div>
                    </a>
                </div>

                <!-- Search -->
                <div class="col-md-5 mb-2 mb-md-0">
                    <form class="d-flex" method="get" action="@Url.Action("Index","Home")">
                        <div class="input-group">
                            <input type="text"
                                   name="keyword"
                                   class="form-control"
                                   placeholder="Tìm sản phẩm, module, linh kiện..." />

                            <button type="submit" class="btn btn-4m-primary px-3">
                                🔍 Tìm kiếm
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Cart + Đăng nhập -->
                <div class="col-md-4 d-flex justify-content-md-end justify-content-start align-items-center gap-3">

                    @* GIỎ HÀNG 4M *@
                    <a href="@Url.Action("Index","Cart")"
                       class="cart-button-4m position-relative d-flex align-items-center justify-content-center me-1">
                        <i class="bi bi-bag-heart-fill cart-icon-4m"></i>
                        <span class="cart-badge-4m position-absolute">
                            @((Session["Cart"] != null) ? ((List<CartItems>)Session["Cart"]).Count : 0)
                        </span>
                    </a>

                    @* KHU VỰC ĐĂNG NHẬP/ĐĂNG KÝ *@
                    <div class="d-flex flex-column text-end small">
                        <div>
                            <a href="@Url.Action("Login","Account")" class="text-decoration-none me-2">
                                Đăng nhập
                            </a>
                            <span class="text-muted">/</span>
                            <a href="@Url.Action("Register","Account")" class="text-decoration-none ms-2">
                                Đăng ký
                            </a>
                        </div>
                        <span class="text-muted d-none d-md-inline">
                            Xin chào, khách truy cập!
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- MAIN NAV -->
    <nav class="bg-white border-top border-bottom">
        <div class="container py-2">
            @Html.Partial("_NavbarCategories")
        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <main class="py-3">
        <div class="container">
            <div class="row g-3">
                <!-- SIDEBAR -->
                <div class="col-lg-3">
                    @Html.Partial("_Sidebar4M")
                </div>

                <!-- CONTENT -->
                <div class="col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light py-3 mt-3">
        <div class="container text-center small">
            © @DateTime.Now.Year Linh kiện điện tử 4M.
            <br />Email: <a href="mailto:contact@4m.vn" class="text-light">contact@4m.vn</a>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>