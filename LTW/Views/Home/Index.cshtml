@model List<LTW.Models.Products>
@using System.Globalization
<h4 class="mb-3">Sản phẩm nổi bật</h4>
<div class="row">
    @foreach (var item in Model)
    {
        <!-- Card 1 -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@Url.Content("~/Content/Images/" + item.ImageURL)" class="card-img-top" alt="@item.ProductName">
                <div class="card-body text-center">
                    <h6 class="card-title">@item.ProductName</h6>
                    <p class="text-danger fw-bold">@item.Price.ToString("N0", new CultureInfo("en-US")) đ</p>
                    @*<a href="@Url.Action("Detail", "Home", new { id = item.MaSP })" class="btn btn-sm btn-outline-primary">Xem chi tiết</a>*@
                </div>
            </div>
        </div>
    }
</div>